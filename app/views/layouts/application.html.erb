<!DOCTYPE html>
  <%= render "layouts/head" %>
  <body>
    
  <%= render "layouts/topbar" %>

    <div class="container"> 
      <div class="content">
        <div class="row">
          <div class="span9">
			<% flash.each do |key, value| %>
			          <div class="flash <%= key %>"><%= value %></div>
			<% end %>
            <%= yield %>
          </div>
       <%= render "layouts/sidebar" %>
        </div><!--/row-->
      </div><!--/content-->

      <footer>
        <p>&copy; ToodleDoodle Inc.</p> 
      </footer>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
