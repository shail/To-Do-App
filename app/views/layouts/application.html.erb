<!DOCTYPE html>
  <%= render "layouts/head" %>
  <body>
    
  <%= render "layouts/topbar" %>

    <div class="container"> 
      <div class="content">
        <div class="row">
          
			<% flash.each do |key, value| %>
			          <div class="flash <%= key %>"><%= value %></div>
			<% end %>
            <%= yield %>
          </div>
      
        </div><!--/row-->
      </div><!--/content-->

      <footer>
       <div class="company">
        <p>&copy; ToodleDoodle Inc.</p> 
       </div>
      </footer>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
